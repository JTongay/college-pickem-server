{
  "name": "football-pickem-be",
  "version": "1.0.0",
  "description": "The Backend for the two football games",
  "main": "server.js",
  "engines": {
    "node": "8.0.0",
    "npm": "5.0.0"
  },
  "scripts": {
    "test": "npm run unit && npm run integration",
    "start": "node server.js",
    "deploy": "git push heroku master",
    "development": "nodemon server.js",
    "build": "npm run build:dev",
    "build:dev": "webpack --config ./webpack.config.js --progress --profile --color --display-error-details --display-cached && npm run copy-files",
    "integration": "node_modules/.bin/jest --forceExit",
    "unit": "mocha -r ts-node/register test/unit/*.ts",
    "db-test": "knex migrate:latest --env test && knex seed:run --env test",
    "db-dev": "knex migrate:latest && knex seed:run",
    "dev": "webpack --watch",
    "doc": "apidoc -i routes/ -o apidoc/"
  },
  "apidoc": {
    "title": "Football Picks API Documentation",
    "url": "localhost:3000/api",
    "name": "Football Picks API",
    "description": "A web scraper/API that generates the football schedule for top 25 NCAA teams and all NFL teams"
  },
  "keywords": [],
  "author": "https://github.com/JTongay",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.18.3",
    "cheerio": "^1.0.0-rc.2",
    "config": "^1.30.0",
    "cron": "^1.3.0",
    "debug": "^3.1.0",
    "dotenv": "^4.0.0",
    "ejs": "^2.6.1",
    "email-templates": "^3.6.1",
    "errorhandler": "^1.5.0",
    "express": "^4.16.3",
    "express-status-monitor": "^1.1.4",
    "helmet": "^3.12.1",
    "inversify": "^4.13.0",
    "jsonwebtoken": "^8.3.0",
    "knex": "^0.13.0",
    "lodash": "^4.17.10",
    "moment": "^2.22.2",
    "morgan": "^1.9.0",
    "nodemailer": "^4.6.7",
    "pg": "^7.4.3",
    "pug": "^2.0.3",
    "reflect-metadata": "^0.1.12",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "tinyreq": "^3.4.0",
    "winston": "^3.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/body-parser": "^1.17.0",
    "@types/chai": "^4.1.4",
    "@types/config": "0.0.34",
    "@types/cron": "^1.3.0",
    "@types/debug": "0.0.30",
    "@types/ejs": "^2.6.0",
    "@types/errorhandler": "0.0.32",
    "@types/express": "^4.16.0",
    "@types/helmet": "0.0.38",
    "@types/jest": "^23.3.1",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/mocha": "^5.2.5",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.5.2",
    "@types/nodemailer": "^4.6.2",
    "@types/sinon": "^5.0.1",
    "@types/supertest": "^2.0.5",
    "@types/webpack": "^4.4.7",
    "chai": "^4.1.2",
    "dotenv": "^4.0.0",
    "eslint": "^5.1.0",
    "eslint-config-airbnb": "^17.0.0",
    "eslint-plugin-import": "^2.13.0",
    "jest": "^23.4.2",
    "mocha": "^4.1.0",
    "nodemon": "^1.18.3",
    "nodemon-webpack-plugin": "^3.0.1",
    "sinon": "^6.1.4",
    "supertest": "^3.1.0",
    "ts-jest": "^23.0.1",
    "ts-loader": "^4.4.2",
    "ts-mocha": "^1.2.0",
    "ts-mockito": "^2.3.0",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2",
    "uglifyjs-webpack-plugin": "^1.2.7",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0",
    "webpack-merge": "^4.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
      "^.+\\.(ts|js)x?$": "ts-jest"
    },
    "testMatch": [
      "<rootDir>/test/integration/*.spec.(ts|js)"
    ],
    "testEnvironment": "node"
  }
}
